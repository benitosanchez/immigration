<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ai.immigration.immigration.mainScreen.MainActivity">

    <LinearLayout
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What do you need help with?"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/title_main"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.826">


        <Button
            android:id="@+id/green_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_style"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_home"
            android:text="Green Card"
            android:textColor="#424242"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="10dp" />

        <Button
            android:id="@+id/travel_visa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_style"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_travel"
            android:text="Travel Visa"
            android:textColor="#424242"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="333dp" />

        <Button
            android:id="@+id/daca_renewal"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_style"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_daca"
            android:text="Daca Renewal"
            android:textColor="#424242"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="209dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
